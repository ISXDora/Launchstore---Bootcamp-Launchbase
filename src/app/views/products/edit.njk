{% extends 'layout.njk' %}

{% block content%}
<section class="container form">
    <form method="post" action="/products?_method=PUT" enctype="multipart/form-data">
        <div class="header">
            <h3>Editar Produto</h3>
        </div>

        <div class="fields">
            {% include 'products/fields.njk' %}

            <input 
                type="hidden" 
                name="id" 
                value="{{product.id}}"> 
        </div>

        <button class="button edit" type="submit">Atualizar</button>
        <button class="button delete" form="form-delete" type="submit">Deletar</button>
        
    </form>

    <form id="form-delete" method="post" action="/products?_method=DELETE">
        <input 
            type="hidden" 
            name="id" 
            value="{{product.id}}"
        > 
    </form>

        {% include 'products/confirm.njk'%}
</section>

{% endblock %}